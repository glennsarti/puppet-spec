Examples('-',
  Examples('array',
    Example('array',
      Given(`[1,2,3,4,5,6] - [4,5,6]`),
      Evaluates_to([1,2,3])),

    Example('hash',
      Given(`[[1,2],[b,20]] - {a => 1, b => 20}`),
      Evaluates_to([[1,2]])),

    Example('other element',
      Given(`[1,2,3] - 3`),
      Evaluates_to([1,2])),
 ),

  Examples('hash',
    Example('hash',
      Given(`{a => 10, b => 20} - {b => 30}`),
      Evaluates_to({a => 10})),

    Example('array',
      Given(`{a => 10, b => 20} - [a,c]`),
      Evaluates_to({b => 20})),

